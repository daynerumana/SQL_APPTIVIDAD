/****** Object:  StoredProcedure [dbo].[Create_Producto]    Script Date: 8/6/2022 08:00:54 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE [dbo].[Create_Producto]  
	@Imagen varbinary(MAX),
	@Descripción varchar(100),
	@Precio_Compra float,
	@Precio_Venta float,
	@Stock int,
	@ID_Categoria int,
	@InfoProducto xml 
AS
BEGIN
	-- SET NOCOUNT ON added to prevent extra result sets from
	-- interfering with SELECT statements.
	SET NOCOUNT ON;

    INSERT INTO [dbo].[Producto]
           ([Imagen]
           ,[Descripción]
           ,[Precio_Compra]
           ,[Precio_Venta]
           ,[Stock]
           ,[ID_Categoria]
           ,[InfoProducto])
     VALUES
           (@Imagen ,
			@Descripción ,
			@Precio_Compra ,
			@Precio_Venta ,
			@Stock ,
			@ID_Categoria ,
			@InfoProducto )
END
GO
